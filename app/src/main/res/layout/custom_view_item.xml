<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/custom_layout"
    android:clickable="true"
    android:background="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="130dp">

    <ImageView
        android:layout_width="0dp"
        android:id="@+id/custom_layout_cropImage_image_view"
        android:layout_height="match_parent"

        android:layout_weight="2"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="4">
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/custom_layout_cropName_text_view"
            android:layout_height="0dp"

            android:paddingLeft="15dp"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:textAllCaps="true"
            android:layout_gravity="center_vertical"
            android:paddingTop="6dp"

            android:layout_weight="2"/>
        <TextView
            android:layout_width="match_parent"

            android:textSize="15sp"
            android:paddingLeft="15dp"
            android:textStyle="italic"
            android:paddingTop="3dp"
            android:textColor="@android:color/background_dark"
            android:id="@+id/custom_layout_variety_text_view"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:textSize="15sp"
            android:textColor="@android:color/background_dark"
            android:textStyle="italic"
            android:paddingTop="3dp"
            android:paddingLeft="15dp"
            android:id="@+id/custom_layout_date_text_view"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:paddingLeft="15dp"
            android:textSize="15sp"
            android:paddingTop="3dp"
            android:textColor="@android:color/background_dark"
            android:textStyle="italic"
            android:id="@+id/custom_layout_quantity_text_view"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:textSize="15sp"
            android:textColor="@android:color/background_dark"
            android:textStyle="italic"
            android:id="@+id/custom_layout_price_text_view"
            android:paddingLeft="15dp"
            android:paddingTop="3dp"
            android:layout_weight="1"/>

    </LinearLayout>



</LinearLayout>